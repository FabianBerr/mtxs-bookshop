{
  "name": "mtxs-bookshop",
  "version": "0.0.1",
  "description": "MTXS Bookshop",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^6",
    "@sap/cds-mtxs": "^1",
    "express": "^4",
    "hdb": "^0.19.0"
  },
  "devDependencies": {
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "start:hybrid": "cds build --production && cp gen/srv/resources.tgz . && cds bind --exec cds-serve --profile hybrid"
  },
  "cds": {
    "requires": {
      "multitenancy": true,
      "toggles": true,
      "extensibility": true,
      "[hybrid]": {
        "db": {
          "kind": "hana-cloud"
        }
      },
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        }
      },
      "db": {
        "kind": "sql"
      }
    }
  }
}
